<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:license="http://schemas.android.com/apk/res-auto">

    <style name="AppBaseTheme" parent="android:Theme.Light"/>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="noticeFilesTextColor">@android:color/black</item>
        <item name="linkTextColor">@color/text_link</item>
        <item name="licenseTextColor">@android:color/black</item>
        <item name="licenseTextBackgroundColor">@color/license_background</item>
        <item name="bulletPointImage">@drawable/bullet_point</item>
    </style>

    <style name="TextView" parent="@android:style/Widget.TextView" />

    <style name="TextView.NoticeforFile">
        <item name="android:textColor">?attr/noticeFilesTextColor</item>
    </style>
    
    <style name="TextView.LinkText">
        <item name="android:textColor">?attr/linkTextColor</item>
    </style>
    
    <style name="TextView.License">
        <item name="android:textColor">?attr/licenseTextColor</item>
        <item name="android:background">?attr/licenseTextBackgroundColor</item>
    </style>

</resources>