<?xml version="1.0" encoding="utf-8"?>
<com.smurph.openlicenseparserlib.utils.LicenseView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:license="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="0dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="10dp" >

    <TextView
        android:id="@+id/textView1"
        style="@style/TextView.NoticeforFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notice_for_files"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/bullet_point"
        android:maxHeight="20dp"
        android:maxWidth="20dp"
        android:scaleType="centerInside"
        android:src="?attr/bulletPointImage" />

    <TextView
        android:id="@+id/textView2"
        style="@style/TextView.LinkText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/imageView1"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="TextView"
        android:textSize="16sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView3"
        style="@style/TextView.License"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="8dp"
        android:paddingBottom="5dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="5dp"
        android:text="Lots and lots of text"
        android:textSize="14sp" />

</com.smurph.openlicenseparserlib.utils.LicenseView>